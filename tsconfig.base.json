{
  "compilerOptions": {
    "target": "ES2021",
    "moduleResolution": "Node",
    "types": ["node"],
    "strict": true,
    "declaration": false,
    "sourceMap": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"]
}
